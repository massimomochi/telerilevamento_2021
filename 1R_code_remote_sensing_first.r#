# Il mio primo codice in R per il telerilevamento!
# utilizzare " per import da esterno
# utilizzare parentesi per le funzioni
setwd("C:/lab/") #Windows
library(raster) #per richiamare pacchetto gi√† installato
p224r63_2011 <- brick("p224r63_2011_masked.grd") # multi-layer raster object
p224r63_2011 # associazione 
plot(p224r63_2011) # rappresentazione grafica

# day 2

cl <- colorRampPalette(c("black","grey","light grey"))(100) # per cambiare colore
plot(p224r63_2011, col=cl)

clg <- colorRampPalette(c('dark green','green','light green'))(100) # ex colour change
plot(p224r63_2011$B2_sre, col=clg)

cl1 <- colorRampPalette(c("blue","green","orange","red")) (100) # ex colour change
plot(p224r63_2011, col=cl1)

# day 3

# Bande Landsat
# B1: blu
# B2: verde
# B3: rosso
# B4: infrarosso vicino
# B5: infrarosso medio
# B6: infrarosso termico
# B7: infrarosso medio

#dev.off will clean the current graph

dev.off 

plot(p224r63_2011$B1_sre)
plot(p224r63_2011$B2_sre)

# 1 row, 1 columns
par(mfrow=c(1,2))
plot(p224r63_2011$B1_sre)
plot(p224r63_2011$B2_sre)
 
    
# 2 row, 1 columns
par(mfrow=c(2,1))
plot(p224r63_2011$B1_sre)
plot(p224r63_2011$B2_sre)

# plot the first four bands of Landsat
par(mfrow=c(4,1))
plot(p224r63_2011$B1_sre)
plot(p224r63_2011$B2_sre)
plot(p224r63_2011$B3_sre)
plot(p224r63_2011$B4_sre)

par(mfrow=c(2,2))
plot(p224r63_2011$B1_sre)
plot(p224r63_2011$B2_sre)
plot(p224r63_2011$B3_sre)
plot(p224r63_2011$B4_sre)

cl <- colorRampPalette(c("dark blue","blue","light blue"))(100) # per cambiare colore
plot(p224r63_2011$B1_sre, col=cl)

clg <- colorRampPalette(c('dark green','green','light green'))(100) # ex colour change
plot(p224r63_2011$B2_sre, col=clg)

cl1 <- colorRampPalette(c("dark red","red","pink")) (100) # ex colour change
plot(p224r63_2011$B3_sre, col=cl1)

clnir <- colorRampPalette(c("red","orange","yellow")) (100) # ex colour change
plot(p224r63_2011$B4_sre, col=clnir)

# RGB 

plotRGB(p224r63_2011, r=3, g=2, b=1, stretch="Lin")

plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")

# Exercise: mount NIR ontop the G of RGB

plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=2, b=4, stretch="Lin")

par(mfrow=c(2,2))
plotRGB(p224r63_2011, r=3, g=2, b=1, stretch="Lin")
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=2, b=4, stretch="Lin")

#esercizio di stampa su PDF
pdf("il_mio_primo_pdf_su_R.pdf")
par(mfrow=c(2,2))
plotRGB(p224r63_2011, r=3, g=2, b=1, stretch="Lin")
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=2, b=4, stretch="Lin")

plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="hist")

#par natural colours, false colours and false colours with histogram stratching

par(mfrow=c(3,1))
plotRGB(p224r63_2011, r=3, g=2, b=1, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=3, g=4, b=2, stretch="hist")

#installare nuovo pacchetto per prossima lezione 

install.packages("RStoolbox")

#multitemporal set
#utilizzo comando "brick" per importare nuova immagine del 1988

p224r63_1988 <- brick("p224r63_1988_masked.grd")
p224r63_1988

plot(p224r63_1988)

#faccio i due plot e li metto sulla stessa rappresentazione grafica con il comando "par"

par(mfrow=c(2,1))
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Lin")

#cambio lo stretch da "lin" a "hist" per evidenziare meglio i corsi d'acqua

par(mfrow=c(2,1))
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Hist")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Hist")

#par con 2 righe e 2 colonne per mettere insieme tutte e 4 le immagini
par(mfrow=c(2,2))
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Hist")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Hist")

#pdf
pdf("pdf_2_con_R.pdf")
par(mfrow=c(2,2))
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Lin")
plotRGB(p224r63_2011, r=4, g=3, b=2, stretch="Hist")
plotRGB(p224r63_1988, r=4, g=3, b=2, stretch="Hist")
dev.off()
